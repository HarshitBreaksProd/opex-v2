{
  "name": "opex-v2",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd ./packages/db && pnpm run db:generate && cd ../..",
    "db:migrate": "cd ./packages/db && pnpm run db:migrate && cd ../..",
    "start:backend": "cd ./apps/backend && pnpm run start",
    "start:engine": "cd ./apps/engine && pnpm run start",
    "start:poller": "cd ./apps/poller && pnpm run start",
    "start:web-socket": "cd ./apps/web-socket && pnpm run start"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
